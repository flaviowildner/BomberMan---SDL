#include <SDL2/SDL.h>
#include <SDL2/SDL_image.h>
#include <SDL2/SDL_mixer.h>
#include <stdio.h>

typedef int bool;

#define true 1
#define false 0

const int SCREEN_WIDTH = 640;
const int SCREEN_HEIGHT = 480;


int main( int argc, char* args[] )
{
    SDL_Window* Window = NULL;

    SDL_Surface* Tela = NULL;

    SDL_Surface* Imagem = IMG_Load("as.png");

    SDL_Rect rect;

    rect.x = 0;
    rect.y = 0;
    rect.w = 0;
    rect.h = 0;

    SDL_Init(SDL_INIT_EVERYTHING);
    Window = SDL_CreateWindow( "Jogo", SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, SCREEN_WIDTH, SCREEN_HEIGHT, SDL_WINDOW_SHOWN );
    Tela = SDL_GetWindowSurface( Window );

    int imgFlags = IMG_INIT_PNG;

			bool quit = false;
			//musica = Mix_LoadWAV("")

			SDL_Event e;

			while( !quit )
			{
				while( SDL_PollEvent( &e ) != 0 )
				{
					if( e.type == SDL_KEYDOWN )
					{
					    switch(e.key.keysym.sym)
					    {
                        case SDLK_UP:
                           rect.y -= 5;
                           break;
                        case SDLK_DOWN:
                            rect.y += 5;
                           break;
                        case SDLK_LEFT:
                           rect.x -= 5;
                           break;
                        case SDLK_RIGHT:
                           rect.x += 5;
                           break;
                        case SDLK_ESCAPE:
                            quit = true;
                            break;
                        }
                    }
				}
				SDL_FillRect(Tela, NULL, SDL_MapRGB(Tela->format,0,0,0));

				SDL_BlitSurface( Imagem, NULL , Tela, &rect );

				SDL_UpdateWindowSurface( Window );
			}

	SDL_FreeSurface( Imagem );
	Imagem = NULL;


	SDL_DestroyWindow( Window );
	Window = NULL;


	SDL_Quit();

	return 0;
}
